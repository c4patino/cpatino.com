---
import "@/styles/global.css";
import Header from "@/components/header";
import Footer from "@/components/footer.astro";

const { title } = Astro.props;
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    return "dark";
  };

  const isDark = getThemePreference() === "dark";
  document.documentElement.classList[isDark ? "add" : "remove"]("dark");

  if (typeof localStorage !== "undefined") {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });
    observer.observe(document.documentElement, {
      attribute: true,
      attributeFilter: ["class"],
    });
  }
</script>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Ceferino Patino" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#0f172a" />
    <meta
      name="keywords"
      content="Ceferino Patino, cpatino, c4patino, C4 Patino"
    />
    <meta
      name="description"
      content="Ceferino Patino (C4) – Software Engineer and FOSS contributor"
    />

    <meta property="og:title" content="cpatino.com" />
    <meta property="og:url" content="https://cpatino.com" />
    <meta property="og:type" content="website" />
    <meta
      name="og:description"
      content="Ceferino Patino (C4) – Software Engineer and FOSS contributor"
    />

    <meta name="twitter:title" content="cpatino.com" />
    <meta name="twitter:image" content="https://cpatino.com/og-image.png" />
    <meta
      name="twitter:description"
      content="Ceferino Patino (C4) – Software Engineer and FOSS contributor"
    />

    <link rel="canonical" href="https://cpatino.com" />
    <title>{title ? `${title} | cpatino.com` : "cpatino.com"}</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <div class="flex min-h-screen flex-col">
      <Header client:load />
      <main class="flex flex-1 flex-col items-stretch justify-center">
        <slot />
      </main>
    </div>
    <Footer />
  </body>
</html>
