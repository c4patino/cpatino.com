---
import "@/styles/global.css";

import BaseLayout from "@/layouts/base.astro";
import CenterLayout from "@/layouts/center.astro";

const animation =
  "animate-in fade-in duration-1000 ease-out fill-mode-backwards";
---

<BaseLayout title="about">
  <CenterLayout>
    <div class="flex flex-col items-center gap-8">
      <h1
        class={`${animation} slide-in-from-left-12 tracking-light text-4xl font-extrabold`}
      >
        about me
      </h1>
      <ul class="flex list-disc flex-col gap-3 text-xl font-medium">
        <li class={`${animation} delay-200 slide-in-from-left-12`}>
          19 y/o, lifelong learner
        </li>
        <li class={`${animation} delay-100 slide-in-from-left-12`}>
          linux and devops enthusiast
        </li>
        <li class={`${animation} delay-300 slide-in-from-left-12`}>
          nixos user by choice, not by accident
        </li>
        <li class={`${animation} delay-400 slide-in-from-left-12`}>
          i love neovim
        </li>
        <li class={`${animation} delay-100 slide-in-from-left-12`}>
          terminal feels like home
        </li>
      </ul>
    </div>
  </CenterLayout>
</BaseLayout>
