---
import BaseLayout from "@/layouts/base.astro";
import CenterLayout from "@/layouts/center.astro";

const animation =
  "animate-in fade-in duration-1000 ease-out fill-mode-backwards slide-in-from-left-12";
---

<BaseLayout title="about">
  <CenterLayout>
    <div class="flex flex-col items-center gap-8">
      <h1 class={`${animation} tracking-light text-4xl font-extrabold`}>
        about me
      </h1>
      <ul
        class="flex list-inside list-disc flex-col gap-3 text-sm font-medium md:text-xl"
      >
        <li class={`${animation} delay-200`}>
          19 y/o systems and AI enthusiast
        </li>
        <li class={`${animation} delay-100`}>
          devoted nixos user & contributor
        </li>
        <li class={`${animation} delay-300`}>neovim & terminal lifeâ€”always</li>
        <li class={`${animation} delay-400`}>
          love open systems and dev tools
        </li>
        <li class={`${animation} delay-100`}>building fast things with Rust</li>
      </ul>
    </div>
  </CenterLayout>
</BaseLayout>
